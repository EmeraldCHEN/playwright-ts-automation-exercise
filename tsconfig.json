{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@BasePage": ["ui/pages/BasePage"],
      "@HomePage": ["ui/pages/HomePage"],
      "@SignupPage": ["ui/pages/SignupPage"],    
      "@CartPage": ["ui/pages/CartPage"],
      "@CheckoutPage": ["ui/pages/CheckoutPage"],
      "@PaymentPage": ["ui/pages/PaymentPage"],
      "@Navbar": ["ui/pages/Navbar"],
      "@test-data/userData": ["ui/test-data/userData"],
      "@test.config": ["configs/test.config.ts"],
      "@UserClient": ["api/clients/userClient"],
      // Add other explicit aliases as needed to keep imports clear, maintainable, and IDE-friendly
    },
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true, 
    "noEmit": true
  },
  "include": ["**/*.ts", "playwright.config.ts"]
}