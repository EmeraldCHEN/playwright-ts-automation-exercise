{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@PaymentPage": ["../pages/PaymentPage"],
      "@HomePage": ["src/pages/HomePage"],
      "@utils/*": ["src/utilities/*"]
      // Add other explicit aliases as needed to keep imports clear, maintainable, and IDE-friendly
    },
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true, 
    "noEmit": true,
    "include": ["src/**/*.ts", "playwright.config.ts"]
  }
}